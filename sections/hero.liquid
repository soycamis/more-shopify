
  <div class="hero  hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}{% if section.settings.parallax%} hero__parallax {% endif %} box ratio-container lazyload js {% if section.settings.hide_mobile %} small--hide {% endif %}"
